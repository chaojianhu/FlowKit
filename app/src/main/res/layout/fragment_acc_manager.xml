<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.h3x.androidmalware.View.Fragments.AccManagerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:background="@color/background">

        <TextView
            android:id="@+id/AccountManagerView"
            android:gravity="center"
            android:fontFamily="@font/montserrat_extralight"
            android:layout_width="match_parent"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content"
            android:text="Accounts:" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="false"
            android:longClickable="false" >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_gravity="left"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Load contacts" />

            <Button
                android:id="@+id/export"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:enabled="false"
                android:background="@drawable/cornerbtn"
                android:text="Export" />
        </FrameLayout>


        <TextView
            android:id="@+id/ContactManagerView"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_extralight"
            android:layout_width="match_parent"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content"
            android:text="Contacts:" />



    </LinearLayout>

</FrameLayout>
