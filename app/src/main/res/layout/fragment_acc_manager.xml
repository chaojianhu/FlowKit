<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.h3x.androidmalware.View.AccManagerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:background="@color/background">

        <TextView
            android:id="@+id/AccountManagerView"
            android:gravity="center"
            android:fontFamily="@font/montserrat_extralight"
            android:layout_width="match_parent"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content"
            android:text="Accounts:" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_gravity="center"
            android:background="@drawable/cornerbtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Click Here to load Contacts" />

        <TextView
            android:id="@+id/ContactManagerView"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_extralight"
            android:layout_width="match_parent"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content"
            android:text="Contacts:" />



    </LinearLayout>

</FrameLayout>
